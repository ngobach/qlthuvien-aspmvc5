@model WebQLThuVien.ViewModels.CreateUserViewModel

@{
    ViewBag.Title = "Tạo mới người dùng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 col-sm-offset-3">
            <div class="card">
                <div class="card-header" data-background-color="green">
                    <h3 class="title">Tạo mới người dùng</h3>
                </div>
                <div class="card-content">
                    @using (Html.BeginForm())
                    {
                        <div class="form-group label-floating">
                            @Html.LabelFor(x => x.Username, new { @class = "control-label" })
                            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
                        </div>
                        <div class="form-group label-floating">
                            @Html.LabelFor(x => x.Fullname, new { @class = "control-label" })
                            @Html.TextBoxFor(x => x.Fullname, new { @class = "form-control" })
                        </div>
                        <div class="form-group label-floating">
                            @Html.LabelFor(x => x.Email, new { @class = "control-label" })
                            @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                        </div>
                        <div class="form-group label-floating">
                            @Html.LabelFor(x => x.Password, new { @class = "control-label" })
                            @Html.PasswordFor(x => x.Password, new { @class = "form-control" })
                        </div>
                        <div class="form-group label-floating">
                            @Html.LabelFor(x => x.RePassword, new { @class = "control-label" })
                            @Html.PasswordFor(x => x.RePassword, new { @class = "form-control" })
                        </div>
                        if (!Html.ViewData.ModelState.IsValid)
                        {
                            @Html.ValidationSummary(false,null, new { @class = "alert alert-danger"})   
                        }
                        if (ViewBag.Message != null)
                        {
                            <div class="alert alert-info">
                                @ViewBag.Message
                            </div>
                        }
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Đồng ý</button>
                            <a href="@Url.Action("Index")" class="btn btn-info">Trở lại</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
