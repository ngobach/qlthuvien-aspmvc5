<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/user/img/apple-icon.png">
    <link rel="icon" type="image/png" href="~/assets/user/img/favicon.png">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>@ViewBag.Title</title>
    <meta content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no" name="viewport" />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <!-- CSS Files -->
    <link href="~/assets/user/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/assets/user/css/now-ui-kit.css" rel="stylesheet" />
    <link href="~/assets/user/css/app.css" rel="stylesheet"/>
    @RenderSection("styles", false)
</head>

<body class="landing-page">
<!-- Navbar -->
<nav class="navbar navbar-toggleable-md bg-primary fixed-top navbar-transparent " color-on-scroll="500">
    <div class="container">
        <div class="navbar-translate">
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navigation" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-bar bar1"></span>
                <span class="navbar-toggler-bar bar2"></span>
                <span class="navbar-toggler-bar bar3"></span>
            </button>
            <a class="navbar-brand" href="/">
                Thư viện ĐH Điên Lực
            </a>
        </div>
        <div class="collapse navbar-collapse justify-content-end" id="navigation" data-nav-image="/assets/user/img/blurred-image-1.jpg">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Dashboard")"><span class="now-ui-icons objects_spaceship"></span> Bảng điều khiển</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Cart", "Home")"><span class="now-ui-icons shopping_bag-16"></span> Giỏ sách</a>
                </li>
                @if (Session["readerId"] == null)
                {
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Login", "Home")"><span class="now-ui-icons users_circle-08"></span> Đăng nhập</a>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <span class="nav-link">Xin chào @ViewBag.Username</span>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Logout", "Home")"><span class="now-ui-icons users_circle-08"></span> Đăng xuất</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</nav>
<!-- End Navbar -->
<div class="wrapper">
    <div class="page-header page-header-small">
        <div class="page-header-image" data-parallax="true" style="background-image: url('/assets/user/img/head_bg.jpg');">
        </div>
        <div class="container">
            <div class="content-center">
                <h1 class="title">Chào mừng bạn đến với<br/>thư viện trường Đại Học Điện Lực.</h1>
            </div>
        </div>
    </div>
    @RenderBody()
    <footer class="footer footer-default">
        <div class="container">
            @*<nav>
                <ul>
                    <li>
                        <a href="https://www.creative-tim.com">
                            Creative Tim
                        </a>
                    </li>
                    <li>
                        <a href="http://presentation.creative-tim.com">
                            About Us
                        </a>
                    </li>
                    <li>
                        <a href="http://blog.creative-tim.com">
                            Blog
                        </a>
                    </li>
                    <li>
                        <a href="https://github.com/creativetimofficial/now-ui-kit/blob/master/LICENSE.md">
                            MIT License
                        </a>
                    </li>
                </ul>
            </nav>*@
            <div class="copyright">
                &copy;
                <script>
                    document.write(new Date().getFullYear())
                </script>, Thực hiện bởi nhóm sinh viên <span class="text-primary">Ngô Xuân Bách</span> &amp; <span class="text-primary">Đinh Viết Nam</span>.
            </div>
        </div>
    </footer>
</div>    
<!--   Core JS Files   -->
<script src="~/assets/user/js/core/jquery.3.2.1.min.js" type="text/javascript"></script>
<script src="~/assets/user/js/core/tether.min.js" type="text/javascript"></script>
<script src="~/assets/user/js/core/bootstrap.min.js" type="text/javascript"></script>
<!--  Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/ -->
<script src="~/assets/user/js/plugins/bootstrap-switch.js"></script>
<!--  Plugin for the Sliders, full documentation here: http://refreshless.com/nouislider/ -->
<script src="~/assets/user/js/plugins/nouislider.min.js" type="text/javascript"></script>
<!--  Plugin for the DatePicker, full documentation here: https://github.com/uxsolutions/bootstrap-datepicker -->
<script src="~/assets/user/js/plugins/bootstrap-datepicker.js" type="text/javascript"></script>
<!-- Control Center for Now Ui Kit: parallax effects, scripts for the example pages etc -->
<script src="~/assets/user/js/bootstrap-notify.js"></script>
<script src="~/assets/user/js/now-ui-kit.js" type="text/javascript"></script>
@RenderSection("scripts", false)
</body>
</html>